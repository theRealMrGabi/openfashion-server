{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"allowJs": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"removeComments": true,
		"sourceMap": true,
		"incremental": true
	},
	"exclude": [
		"test",
		"test/**/*.ts",
		"coverage",
		"jest.config.ts",
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"dist/**/*",
		"node_modules"
	]
}
